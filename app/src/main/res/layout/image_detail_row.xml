<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--android:background="@color/colorWhite"-->


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detailRowImageView"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_marginLeft="@dimen/detail_row_horizontal"
        android:layout_marginRight="@dimen/detail_row_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_row_horizontal"
        android:id="@+id/detailRowTextView"
        android:textAlignment="center"
        android:textColor="@color/colorTextDetail"
        android:textSize="20sp"/>

</LinearLayout>